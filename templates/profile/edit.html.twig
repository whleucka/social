<div id="profile-modal" class="modal-dialog modal-dialog-centered">
    <form method="POST" class="w-100">
        {{ csrf()|raw }}
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn btn-sm" data-bs-dismiss="modal">Cancel</button>
                <button
                    type="button" 
                    hx-post="/profile/{{ profile.username }}/save"
                    hx-trigger="click"
                    hx-target="#info"
                    hx-select="#info"
                    hx-swap="outerHTML"
                    class="btn btn-sm btn-primary ms-auto" 
                    data-bs-dismiss="modal">Save</button>
            </div>
            <div class="modal-body">
                <div id="profile-edit" class="container px-3">
                    <div class="row">
                        <div class="col-6">
                            <label for="first-name" class="form-label p-0">First name</label>
                            <input type="input" class="form-control" id="first-name" name="first_name" value="{{ profile.first_name }}" placeholder="" required>
                        </div>
                        <div class="col-6">
                            <label for="surname" class="form-label p-0">Surname</label>
                            <input type="input" class="form-control" id="surname" name="surname" placeholder="" value="{{ profile.surname }}" required>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col">
                            <label for="username" class="form-label p-0">Username</label>
                            <input type="input" class="form-control" id="username" name="username" placeholder="" value="{{ profile.username }}" required>
                        </div>
                    </div>
                    <div class="row mt-2 mb-2">
                        <div class="col">
                            <label for="description" class="form-label p-0">Description</label>
                            <textarea class="form-control" id="description" name="description" style="height: 200px;">{{ profile.description }}</textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
