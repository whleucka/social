{% extends "layout/app.html.twig" %}

{% block title %}{{ parent() }} - Post{% endblock %}

{% block center_content %}
    <section id="view" class="w-100 show-post">
        <div>
            <span><a class="text-dark" href="{% if post.parent_uuid %}/post/{{ post.parent_uuid }}{% else %}/{% endif %}"><i class="bi bi-arrow-left-circle me-2"></i></a> Post</span>
        </div>
        <div class="mt-3 p-2 post-cont bg-light w-100">
            <div class="post d-flex">
                <img class="avatar" 
                    src="{{ post.gravatar }}" 
                    alt="avatar" 
                    onerror = "this.src = 'https://www.gravatar.com/avatar/3415a74a3d7f4f866f546863ec1bb00e?s=120&d=mp&r=g';" />
                <div class="d-flex flex-column flex-grow-1 px-2">
                    <div class="top" hx-boost="true" hx-target="#view" hx-select="#view" hx-swap="outerHTML" >
                        <span class="name"><a href="/profile/{{ post.username }}" title="View profile">{{ post.name }}</a></span>
                        <span class="username ms-1"><a class="text-muted" href="/profile/{{ post.username }}" title="View profile">@{{ post.username }}</a></span>
                        <span class="px-1">Â·</span>
                        <span class="ago text-muted">{{ post.ago }}</span>
                    </div>
                    {% if post.image %}
                    <div class="mt-3">
                        {% if post.url %}<a href="{{ post.url }}" target="_blank" title="View link">{% endif %}
                        <img loading="lazy" class="image" src="{{ post.image }}" alt="article" />
                        {% if post.url %}</a>{% endif %}
                    </div>
                    {% endif %}
                    <p class="content word-break p-2">{{ post.content|linkify|raw }}</p>
                    <div class="bottom w-100 d-flex justify-content-around">
                    <div class="action"
                        title="Reply"
                        hx-get="/post/control/{{ post.uuid }}"
                        hx-target="#new-post"
                        hx-trigger="click"
                        data-bs-toggle="modal"
                        data-bs-target="#new-post"><i class="bi bi-reply"></i></div>
                        <div class="action d-flex align-items-center" 
                            title="Like"
                            hx-get="/post/{{ post.uuid }}/like" 
                            hx-trigger="click" 
                            hx-swap="outerHTML">
                            <i class="like bi bi-heart{% if post.liked %}-fill{% endif %} {% if post.liked %}active{% endif %}"></i> <small class="like-count ps-1">{{ post.like_count }}</small>
                        </div>
                        <div class="action" title="Options"><i class="bi bi-three-dots"></i></div>
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-4">
        <div id="comments" class="w-100" hx-get="/post/{{ post.uuid }}/comments" hx-trigger="load, load-comments from:body" hx-swap="innerHTML">
        </div>
    </section>
{% endblock %}
