{% extends "layout/app.html.twig" %}

{% block head %}
    {{ parent() }}
    {% if post.image %}
        <meta name="twitter:card" content="summary_large_image" />
        <meta property="og:image" content="{{ post.image }}" />
        <meta name="twitter:image" content="{{ post.image }}" />
    {% else %}
        <meta name="twitter:card" content="summary" />
    {% endif %}
    <meta property="og:url" content="{{ app.url }}{{ uri("post.index", post.uuid) }}" />
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="{{ app.name }}" />
    <meta property="og:title" content="@{{ post.username }} post on {{ app.name }}!" />
    <meta name="twitter:title" content="@{{ post.username }} post on {{ app.name }}!" />
    <meta property="og:description" content="Check out what @{{ post.username }} posted" />
    <meta name="twitter:description" content="Check out what @{{ post.username }} posted" />
{% endblock %}

{% block title %}{{ parent() }} - Post{% endblock %}

{% block center_content %}
    <section id="view" class="w-100 show-post">
        <div>
            <button class="btn text-dark" hx-get="{% if post.parent_uuid %}/post/{{ post.parent_uuid }}{% else %}/{% endif %}" hx-select="#view" hx-target="#view" hx-swap="outerHTML" hx-push-url="true"><i class="bi bi-arrow-left-circle me-2"></i> Post</button>
        </div>
        <div class="mt-2 p-2 post-cont bg-light w-100">
            <div class="post d-flex flex-column">
                <div class="d-flex">
                    <img class="avatar" 
                        loading="lazy"
                        hx-get="/profile/{{ post.username }}" 
                        hx-target="#view" 
                        hx-select="#view" 
                        hx-swap="outerHTML" 
                        hx-push-url="true"
                        src="{{ post.gravatar }}" 
                        alt="avatar" 
                        onerror = "this.src = 'https://www.gravatar.com/avatar/3415a74a3d7f4f866f546863ec1bb00e?s=120&d=mp&r=g';" />
                    <div class="d-flex flex-column flex-grow-1 px-2 w-100">
                        <div class="top d-flex" hx-boost="true" hx-target="#view" hx-select="#view" hx-swap="outerHTML" >
                            <div class="d-flex flex-column">
                                <div class="d-flex align-items-center">
                                    <span class="name"><a href="/profile/{{ post.username }}" title="View profile">{{ post.name }}</a></span>
                                    <span class="px-1">Â·</span>
                                    <span class="ago text-muted">{{ post.ago }}</span>
                                </div>
                                <span class="username"><a class="text-muted" href="/profile/{{ post.username }}" title="View profile">@{{ post.username }}</a></span>
                            </div>
                        </div>
                        {% if post.image %}
                        <div class="mt-3">
                            {% if post.url %}<a href="{{ post.url }}" target="_blank" title="View link">{% endif %}
                            <img loading="lazy" class="image" src="{{ post.image }}" alt="article" />
                            {% if post.url %}</a>{% endif %}
                        </div>
                        {% elseif post.is_bot and post.url %}
                            <p class="m-0 p-2"><a href="{{ post.url }}" target="_blank" title="View link">Link</a></p>
                        {% endif %}
                        <p class="content word-break p-2">{{ post.content|linkify|raw }}</p>
                    </div>
                </div>
                <div class="bottom w-100 d-flex justify-content-around align-items-center">
                    <div class="action"
                        title="Reply"
                        hx-get="/post/{{ post.uuid }}/control"
                        hx-target="#new-post"
                        hx-trigger="click"
                        data-bs-toggle="modal"
                        data-bs-target="#new-post"><i class="bi bi-reply"></i></div>
                    <div class="action d-flex align-items-center" 
                        title="Like"
                        hx-get="/post/{{ post.uuid }}/like" 
                        hx-trigger="click" 
                        hx-swap="outerHTML">
                        <i class="like bi bi-heart{% if post.liked %}-fill{% endif %} {% if post.liked %}active{% endif %}"></i> <small class="like-count ps-1">{{ post.like_count }}</small>
                    </div>
                    <div class="dropdown action">
                        <button class="btn" title="Options" type="button" id="options-menu" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-three-dots"></i>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="options-menu">
                            <li><span class="dropdown-item" onClick="copyToClipboard('{{ config('app.url') }}/post/{{ post.uuid }}')">Copy post link</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-4">
        <div id="comments" class="w-100" hx-get="/post/{{ post.uuid }}/comments/load" hx-trigger="load, load-comments from:body" hx-swap="innerHTML">
        </div>
        <button 
            id="post-button"
            hx-get="/post/{{ post.uuid }}/control"
            hx-target="#new-post"
            hx-trigger="click"
            data-bs-toggle="modal"
            data-bs-target="#new-post"
            class="btn btn-sm btn-primary d-block d-md-none">
            <i class="bi bi-pencil-square"></i>
            </section>
        <script>
            document.getElementById("scroll-top").style.display = 'none';
        </script>
{% endblock %}
