{% if posts %}
    {% for post in posts %}
        {% include 'post/post.html.twig' %}
    {% endfor %}
    <div hx-get="/post/{{ uuid }}/comments/page/2" hx-trigger="intersect once" hx-swap="afterend"></div>
    <script>
    let toggleScroll = () => {
        let btn = document.getElementById("scroll-top");
        if (window.scrollY > 100) {
        btn.classList.add("active");
        btn.classList.remove("disable");
        } else {
        btn.classList.remove("active");
        btn.classList.add("disable");
        }
    }
    toggleScroll();

    window.addEventListener("scroll", toggleScroll);
    </script>
{% else %}
    <p class="text-muted p-2"><em>There are no comments yet</em></p>
{% endif %}
